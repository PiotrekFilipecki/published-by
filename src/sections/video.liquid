<section class="video">

  <video  autoplay muted loop src="{{ section.settings.videoUrl }}" type="video/mp4" border="0">
     Your browser does not support the video tag.
  </video>

</section>

{% schema %}
  {
    "name": "Video",
    
    "settings": [
      {
        "type": "text",
        "id": "videoUrl",
        "label": "video URL from shopify files",
        "default": "https://cdn.shopify.com/s/files/1/0194/2470/6624/files/video.mp4?12435264356696557322"
      }
    ],

    "presets": [{
      "name": "Video",
      "category": "Video"
    }]
  }
{% endschema %}


